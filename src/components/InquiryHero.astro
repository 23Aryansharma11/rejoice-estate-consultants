---
import { Image } from "astro:assets";
import { homePageImages } from "../Constants";
---

<section
  class="w-full flex flex-col-reverse md:flex-row justify-between items-center"
>
  <div>
    <h1 class="text-4xl md:text-7xl font-bold">
      Navigate Real Estate with Confidence
    </h1>
    <p
      class="text-xl md:text-3xl font-light text-darkGray text-center md:text-left"
    >
      Experience, Expertise, Excellence
    </p>
  </div>
  <Image
    src={homePageImages.home1}
    width={320}
    height={209}
    alt="property in mumbai"
    class="w-full h-auto my-5 md:w-[40%] rounded-2xl shadow-xl"
  />
</section>
